package decisao;

import javax.swing.JOptionPane;

public class ExercicioHotel {

	public static void main(String[] args) {
		
		
		short diaria = Short.parseShort(JOptionPane.showInputDialog("Qdte diária"));
		//float valor_diaria = Float.parseFloat(JOptionPane.showInputDialog(80) );
		
		if ( diaria <15){
			System.out.println("Valor total: " + (diaria * 8.00)*80.00);
			
		}else if ( diaria == 15) {
			
			System.out.println("Valor total: " + (diaria * 6.00)*80.00);
		}else {
			
			System.out.println("Valor total: " + (diaria * 5.500)*80.00);
		}
			
			
		
		
		
		
		
		
		
		
		
		
		
		
		
		

	}

}
