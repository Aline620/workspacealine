package decisao;

import javax.swing.JOptionPane;

public class ExercicioHotel {

	public static void main(String[] args) {
		
		
		short diaria = Short.parseShort(JOptionPane.showInputDialog("Qdte diária"));
		float valor_diaria = float.parseFloat(JOptionPane.showInputDialog(80) );
		
		if ( diaria <15){
			System.out.println("Valor total: " + (diaria * 8)*valor_diaria);
			
		}else if ( diaria == 15) {
			
			System.out.println("Valor total: " + (diaria * 6)*valor_diaria);
		}else {
			
			System.out.println("Valor total: " + (diaria * 5.5)*valor_diaria);
		}
			
			
		
		
		
		
		
		
		
		
		
		
		
		
		
		

	}

}
