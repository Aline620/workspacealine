package repeticao;

import javax.swing.JOptionPane;

public class Exercicio1ppt {

	public static void main(String[] args) {
		
		int dia = Integer.parseInt(JOptionPane.showInputDialog("Digite a data"));
		
		while (dia <= 0 || dia > 31) {
			
			dia =Integer.parseInt(JOptionPane.showInputDialog("Data invalida, digite novamente"));			
			
			
		}
		
		int mes = Integer.parseInt(JOptionPane.showInputDialog("Digite o mes"));
		
		while (mes <=1 || mes>=12) {
			
			mes =Integer.parseInt(JOptionPane.showInputDialog("Mes invalido, digite novamente"));	
		}
		
		int ano = Integer.parseInt(JOptionPane.showInputDialog("Digite o ano"));
		
		while ( ano <=1 || ano <= 2021) {
			
			ano =Integer.parseInt(JOptionPane.showInputDialog("Ano invalido, digite novamente"));	
		}
		
		
		System.out.println("Dia: " + dia);
		System.out.println("Mes: " + mes);
		System.out.println("Ano: " + ano);
		
		
		
		

	}

}
