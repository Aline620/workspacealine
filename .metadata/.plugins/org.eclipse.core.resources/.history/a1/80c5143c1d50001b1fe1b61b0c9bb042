package repeticao;

import javax.swing.JOptionPane;

public class DesafioWhile {

	public static void main(String[] args) {
		
		
		String nome = JOptionPane.showInputDialog("Digite seu nome completo");
		Byte idade = Byte.parseByte(JOptionPane.showInputDialog("Digite sua idade"));
		
		if (((nome.length()> 5 && nome.length() < 20 ) == false) && ((idade < 18 && idade > 80 )== false)) {
			
			System.out.println("Dados errados, tente novamente");
		}
			
		System.out.println("Seja bem vindo: " + nome);
		System.out.println("Seja bem vindo: " + idade);
		
		
		
		
		
		
		
		
		
		
		

	}

}
